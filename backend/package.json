{
  "name": "e-lection_backend",
  "version": "0.1.0",
  "description": "The backend for the eLection software.",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "dev": "cross-env NODE_ENV=dev ts-node-dev src/index.ts",
    "start": "ts-node-dev src/index.ts",
    "build:ui": "cd ../frontend && npm run build && shx cp -r ./dist ../backend && shx rm -rf dist",
    "build": "tsc",
    "start:test": "cross-env NODE_ENV=test ts-node-dev src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint .",
    "build:schema": "ts-json-schema-generator --path ./src/types/lobbyTypes.ts --type ElectionInfo --out src/types/ElectionInfo_schema.json",
    "test:coverage": "cross-env NODE_ENV=test jest --detectOpenHandles --collectCoverage"
  },
  "author": "Sasha Usoskin",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/jest": "^29.5.12",
    "ajv": "^8.17.1",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "redis": "^4.6.15",
    "socket.io": "^4.7.5",
    "ts-json-schema-generator": "^2.3.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "globals": "^15.8.0",
    "jest-date-mock": "^1.0.10",
    "shx": "^0.3.4",
    "socket.io-client": "^4.7.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0"
  }
}

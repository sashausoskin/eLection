{
	"name": "frontend",
	"private": true,
	"version": "1.1.3",
	"description": "Frontend service for the eLection app",
	"author": {
		"name": "Sasha Usoskin",
		"url": "https://github.com/sonicsasha"
	},
	"repository": {
		"type": "GitHub",
		"url": "https://github.com/sonicsasha/eLection"
	},
	"readme": "https://github.com/sonicsasha/eLection/blob/main/frontend/README.md",
	"icon": "https://raw.githubusercontent.com/sonicsasha/eLection/main/frontend/public/img/icon.svg",
	"type": "module",
	"license": "Apache-2.0",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev vite --host",
		"build": "tsc && vite build",
		"build:test": "cross-env VITE_SKIP_ANIMATIONS=true npm run build",
		"build:production": "tsc && cross-env NODE_ENV=production vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview  --host",
		"test": "vitest run",
		"test:e2e-ui": "cypress open",
		"test:e2e": "cypress run",
		"start:e2e": "cross-env VITE_SKIP_ANIMATIONS=true npm run build && npm run preview",
		"sync-translations": "i18next 'src/**/*.{ts,tsx}' [-oc]"
	},
	"dependencies": {
		"@react-spring/web": "^10.0.1",
		"@use-gesture/react": "^10.3.1",
		"axios": "^1.7.2",
		"cypress-real-events": "^1.13.0",
		"dotenv": "^17.2.1",
		"exceljs": "^4.4.0",
		"file-saver": "^2.0.5",
		"formik": "^2.4.6",
		"i18next": "^25.3.2",
		"i18next-browser-languagedetector": "^8.0.0",
		"i18next-http-backend": "^3.0.2",
		"lodash": "^4.17.21",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-i18next": "^15.0.0",
		"react-router": "^7.7.1",
		"react-router-dom": "^7.7.1",
		"react-tooltip": "^5.27.1",
		"socket.io-client": "^4.7.5",
		"yup": "^1.4.0"
	},
	"devDependencies": {
		"@4tw/cypress-drag-drop": "^2.2.5",
		"@eslint/compat": "^1.3.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.32.0",
		"@tanstack/eslint-plugin-query": "^5.35.6",
		"@testing-library/dom": "^10.1.0",
		"@testing-library/jest-dom": "^6.4.5",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/file-saver": "^2.0.7",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.7",
		"@types/mocha": "^10.0.7",
		"@types/node": "^24.2.0",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@typescript-eslint/eslint-plugin": "^8.1.0",
		"@typescript-eslint/parser": "^8.1.0",
		"@vitejs/plugin-react": "^5.0.0",
		"cross-env": "^10.0.0",
		"cypress": "^14.0.3",
		"cypress-delete-downloads-folder": "^0.0.6",
		"eslint": "^9.32.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.6",
		"globals": "^16.3.0",
		"i18next-parser": "^9.0.0",
		"identity-obj-proxy": "^3.0.0",
		"jest-environment-jsdom": "^30.0.5",
		"jsdom": "^26.1.0",
		"prettier": "^3.3.2",
		"typescript": "^5.2.2",
		"vite": "^7.1.0",
		"vitest": "^3.0.6"
	}
}
